<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>login Page</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <%- include('./partials/links2', {page: "login"}) %>
</head>
<body>
<div class="login_form">
  <h1>Login Form</h1>
  <form id="login-form">
 <div class="imgcontainer">
  <img src="user.png" alt="Avatar" class="avatar">
 </div>
    <div style="margin-left: 2%; margin-right: 68%; background-color: rgba(252, 40, 40, 0.137254902);
color: #ce4747;
text-align: center;
padding: 0.0002em 1em;
border-radius: 8px;
width: max-content;
      font-size: 18px; display: none;" id="error">
      <p>Incorrect Password</p>
    </div>
  <label for="username" style="color: white;"><b>Username</b></label><br>
  <input type="text" placeholder="Enter Username" name="username" required><br>

  <label for="password" style="color: white;"><b>Password</b></label><br>
  <input type="password" placeholder="Enter Password" name="password" required><br>

  <button type="submit2">Login</button><br>

</form>
</div>
<script> 
  const errordiv = document.getElementById('error')

  const errMsg = (msg = "") => {
    if (msg == "pswIN") {
      errordiv.innerHTML = '<p>Password Incorrect</p>';
      errordiv.style.display = "block";
    } else if (msg == "UsrIN") {
        errordiv.innerHTML = '<p>Username Is Not Registered</p>';
      errordiv.style.display = "block";
  }else if(msg == "none"){
      errordiv.style.display = "none";
  }
    }
  
  const login = (data) => {
  axios.post('/api/login', {
  username: `${data.username}`,
    password: `${data.password}`
})
.then(function (res) {
  errMsg('none')
  window.location.href = "/"
})
.catch(function (error) {
  if(error.response.status == 401){
      if(error.response.data.message === 'password is incorrect'){
        errMsg("pswIN")
      } else if(error.response.data.message === 'user doesnt exist'){
        errMsg("UsrIN")
      }
  }
  })
 }
  document.querySelector("#login-form").addEventListener("submit", (e) => {
    e.preventDefault()
    const data = Object.fromEntries(new FormData(e.target).entries())
    login(data)
  })
</script>
  </body>
  </html>